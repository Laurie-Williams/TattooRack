<h1>Pieces#edit</h1>

<%= image_tag @piece.image_url %>

<%= form_for @piece do |f| %>

  <%= f.hidden_field :published, value: true %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>


  <div class="actions">
    <%= f.submit "Publish" %>
    <%= link_to "Cancel", piece_path(@piece), method: :delete %>
  </div>


<% end %>