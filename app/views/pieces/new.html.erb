<h1>Pieces#new</h1>

<%= form_for @piece, html: {multipart: true} do |f| %>

  <div class="field">
    <%= f.label :image %>
    <!--<%= f.file_field :image, onchange: "this.form.submit()"%>-->
    <%= f.file_field :image%>
  </div>

  <div class="actions">
    <%= f.submit "Upload" %>
  </div>

<% end %>