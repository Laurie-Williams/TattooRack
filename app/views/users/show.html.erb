<div class="l-index-hero l-index-hero-user">
  <div class="user-hero">
    <%= image_tag @user.avatar_url(:small)%>
    <h1><%= @user.name %></h1>
    <h4><%= @user.bio %></h4>
  </div>
</div>

<div class="page-content">
  <div class="l-index-main">

    <!-- List Pieces-->
    <% @pieces.each_with_index do |piece, i| %>

      <!-- Single Piece-->
      <%= render partial: "pieces/piece", locals: {piece: piece, i: i} %>
      <!-- Single Piece End-->

    <% end %>
    <!-- List Pieces End-->

    <!-- Pagination-->
    <%= paginate @pieces %>

  </div>
</div>